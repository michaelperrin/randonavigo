{% import "hike/utils.html.twig" as hike_utils %}

<link rel="canonical" href="{{ app.request.uri }}" />
<meta property="og:locale" content="fr_FR" />
<meta property="og:type" content="article" />
<meta property="og:title" content="{{ hike.title }}" />
<meta property="og:description" content="{{ hike.summary }}" />
<meta property="og:url" content="http://www.randonavigo.fr/2017/05/14/de-chamarande-a-ferte-alais-gatinais/" />
<meta property="og:site_name" content="Rando Navigo" />
<meta property="article:section" content="{{ hike.categories|first }}" />
<meta property="article:published_time" content="{{ hike.publicationDate|date('c') }}" />
<meta property="article:modified_time" content="{{ hike.publicationDate|date('c') }}" />
<meta property="og:updated_time" content="{{ hike.publicationDate|date('c') }}" />
<meta property="og:image" content="{{ hike_utils.main_picture_url(hike, true) }}" />
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:description" content="{{ hike.summary }}" />
<meta name="twitter:title" content="{{ hike.title }}" />
<meta name="twitter:image" content="{{ hike_utils.main_picture_url(hike, true) }}" />
