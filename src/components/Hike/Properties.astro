---
import type { CollectionEntry } from "astro:content";
import DonationCard from "~/components/Hike/DonationCard.astro";
import Access from "~/components/Hike/Access.astro";
import Map from "~/components/Hike/Map";
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import { getHikeGpxPath } from "~/lib/getHikeGpxPath";
import DownloadIcon from "~/components/Icon/DownloadIcon.astro";
import Distance from "~/components/Hike/Distance.astro";
import GpxAlternatives from "~/components/Hike/GpxAlternatives.astro";

type Props = CollectionEntry<"hike">["data"];

const {
  starting_point,
  ending_point,
  distance,
  gpx_file,
  slug,
  pubDate,
  gpx_alternatives,
} = Astro.props;

const roundedButtonClasses = {
  rounded: gpx_alternatives === undefined,
  "rounded-t": gpx_alternatives !== undefined,
